+/* =========================================================
+   Media fit: iframe (YouTube/TikTok) without cropping
+   - keeps full content visible inside max-height
+   - if max-height is hit, we reduce width and center (side gaps allowed)
+========================================================= */
+function FitMediaIFrame({
+  ratioW = 16,
+  ratioH = 9,
+  className = '',
+  style,
+  ...iframeProps
+}) {
+  const wrapRef = React.useRef(null);
+  const [box, setBox] = React.useState({ w: '100%', h: 0 });
+
+  const recompute = React.useCallback(() => {
+    const wrap = wrapRef.current;
+    if (!wrap) return;
+
+    const mediaBox = wrap.closest?.('.mediaBox') || wrap.parentElement;
+    if (!mediaBox) return;
+
+    let maxH = 0;
+    try {
+      const cs = window.getComputedStyle(mediaBox);
+      const mh = cs.maxHeight || cs.getPropertyValue('max-height') || '';
+      maxH = parseFloat(String(mh).replace('px', '').trim()) || 0;
+      if (!maxH) {
+        const v = cs.getPropertyValue('--mb-h') || '';
+        maxH = parseFloat(String(v).replace('px', '').trim()) || 0;
+      }
+    } catch {}
+
+    if (!maxH) maxH = 700;
+
+    let w = 0;
+    try { w = mediaBox.getBoundingClientRect().width || 0; } catch { w = 0; }
+    if (!w) return;
+
+    // natural height based on container width
+    const naturalH = (w * ratioH) / ratioW;
+
+    if (naturalH <= maxH) {
+      setBox({ w: '100%', h: Math.max(1, Math.round(naturalH)) });
+      return;
+    }
+
+    // max-height reached → reduce width to keep full frame visible
+    const h = Math.max(1, Math.round(maxH));
+    const targetW = Math.max(1, Math.round((h * ratioW) / ratioH));
+    const finalW = Math.min(targetW, Math.round(w));
+    setBox({ w: `${finalW}px`, h });
+  }, [ratioW, ratioH]);
+
+  React.useLayoutEffect(() => {
+    if (typeof window === 'undefined') return undefined;
+    recompute();
+
+    const wrap = wrapRef.current;
+    const mediaBox = wrap?.closest?.('.mediaBox') || wrap?.parentElement;
+    if (!mediaBox || typeof ResizeObserver === 'undefined') return undefined;
+
+    const ro = new ResizeObserver(() => recompute());
+    try { ro.observe(mediaBox); } catch {}
+
+    const onWin = () => recompute();
+    window.addEventListener('resize', onWin);
+
+    return () => {
+      try { ro.disconnect(); } catch {}
+      window.removeEventListener('resize', onWin);
+    };
+  }, [recompute]);
+
+  return (
+    <div
+      ref={wrapRef}
+      className={cls('mediaBoxIframeWrap', className)}
+      style={{
+        width: box.w,
+        height: box.h ? `${box.h}px` : undefined,
+        ...style,
+      }}
+    >
+      <iframe
+        {...iframeProps}
+        className={cls('mediaBoxIframe', iframeProps?.className)}
+        style={undefined}
+      />
+    </div>
+  );
+}
 
